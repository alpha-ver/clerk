.row
  .col-md-4
    .well
      %h2= t 'categories'
      %ul.nav
        =render :partial => "admin_category", :collection => @category.children

    .well
      %h3=t 'add_category'
      =render :partial => 'add_category'

    .well
      %h3#file= t 'uploads'
      %p#file_status
        &nbsp;
      = form_for :documents, :url => documents_path do |f|
        .form-group
          = f.text_field :name, :class => 'form-control change', :placeholder => t('name')
        .form-group
          = f.select(:category, @categories, {},{:class => 'form-control change'})
      #fileupload.upload
        %p=t 'drag_drop'
      .progress#progress


  .col-md-8
    %h3= t 'all_fields'
    %table.table
      %tr.danger
        %th= t 'name'
        %th= t 'code'
        %th
      =render :partial => "field", :collection => @fields
      =render :partial => "form_field"