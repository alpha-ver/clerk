%h1=t('listing_users')

%table.table.table-hover
  %tr
    %th=t 'id'
    %th=t 'email'
    %th=t 'last_sign_at'
    %th=t 'last_sign_ip'
    %th=t 'created_date'
    
    %th
    %th

  - @users.each do |user|
    %tr{:class => ("warning" if user.admin)}
      %td= user.id
      %td= user.email
      %td= user.created_at.to_date
      %td= user.last_sign_in_ip
      %td= user.last_sign_in_at.to_date

      %td= link_to t('edit'), edit_user_path(user)
      %td= link_to t('destroy'), user, :method => :delete, :data => { :confirm => 'Are you sure?' }
